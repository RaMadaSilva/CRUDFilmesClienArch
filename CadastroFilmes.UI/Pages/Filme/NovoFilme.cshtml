@page
@model CadastroFilmes.UI.Pages.Filme.NovoFilmeModel
@{
    ViewData["Title"] = "Novo Filme";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label for="Title">Título:</label>
        <input asp-for="NovoFilme.Title" class="form-control" />
        <span asp-validation-for="NovoFilme.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ReleaseYear">Ano de Lançamento:</label>
        <input asp-for="NovoFilme.ReleaseYear" class="form-control" />
        <span asp-validation-for="NovoFilme.ReleaseYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DurationsInMinute">Duração (minutos):</label>
        <input asp-for="NovoFilme.DurationsInMinute" class="form-control" />
        <span asp-validation-for="NovoFilme.DurationsInMinute" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Category">Categoria:</label>
        <select asp-for="NovoFilme.Category" class="form-control">
            @foreach(var category in Model.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
        <span asp-validation-for="NovoFilme.Category" class="text-danger"></span>
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
