@page
@model CadastroFilmes.UI.Pages.Filme.EditarFilmeModel
@{
    ViewData["Title"] = "Editar Filme"; 
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <input type="hidden" asp-for="EditFilme.Id" />

    <div class="form-group">
        <label for="Title">Título:</label>
        <input asp-for="EditFilme.Title" class="form-control" />
        <span asp-validation-for="EditFilme.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ReleaseYear">Ano de Lançamento:</label>
        <input asp-for="EditFilme.ReleaseYear" class="form-control" />
        <span asp-validation-for="EditFilme.ReleaseYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="DurationsInMinute">Duração (minutos):</label>
        <input asp-for="EditFilme.DurationsInMinute" class="form-control" />
        <span asp-validation-for="EditFilme.DurationsInMinute" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Category">Categoria:</label>
        <select asp-for="EditFilme.Category" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
        <span asp-validation-for="EditFilme.Category" class="text-danger"></span>
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="Index" class="btn btn-info">Voltar para a Lista</a>
</form>